{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Person",
  "type": "object",

  "properties": {
    "full_name": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "phone": { "type": "string" },
    "role": {
      "type": "string",
      "enum": ["attendee", "staff", "admin"]
    },

    "subteam": { "type": "string" },
    "school": { "type": "string" },
    "grade": { "type": "string" },
    "company": { "type": "string" }
  },

  "required": ["full_name", "email", "role"]
}
