{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "QRCode",
  "type": "object",

  "properties": {
    "email": {
      "type": "string",
      "format": "email",
      "description": "Email of the attendee, staff member, etc"
    },
    "first_name": {
      "type": "string",
      "description": "First name"
    },
    "last_name": {
      "type": "string",
      "description": "Last name"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL encoded into the QR code"
    }
  },

  "required": ["email", "url"]
}
